<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".Fragments.ConfirmationFragment"
        android:orientation="vertical"
        android:background="@drawable/bankbackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm and pay"
            android:id="@+id/tv_confirm_pay"
            android:layout_gravity="center"
            style="@style/TextAppearance.Material3.BodyLarge"
            android:textSize="@dimen/_18sdp"
            android:layout_margin="@dimen/_10sdp"
            android:textColor="@color/purple_700"
            />
<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#fff"
    app:cardCornerRadius="@dimen/_10sdp"
    android:layout_margin="@dimen/_20sdp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

    <ImageView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_70sdp"
        android:id="@+id/img_money"
        android:src="@drawable/money"
        android:layout_gravity="center"
android:layout_margin="@dimen/_20sdp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sender"
            android:id="@+id/tv_sender"
            android:layout_gravity="center"
            style="@style/TextAppearance.Material3.BodyLarge"
            android:layout_margin="@dimen/_15sdp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:id="@+id/img_to"
            android:src="@drawable/next"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reciever"
            android:id="@+id/tv_reciever"
            android:layout_gravity="center"
            style="@style/TextAppearance.Material3.BodyLarge"
            android:layout_margin="@dimen/_15sdp"
            />




    </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acc no 12456d"
                android:id="@+id/tv_send_accountnum"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_16sdp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acc n0 ffgt342"
                android:id="@+id/tv_reciever_accountnum"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_25sdp"
                />



        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available balance: Rs 5000.0/."
            android:layout_margin="@dimen/_20sdp"
            android:textColor="@color/purple_700"
            android:id="@+id/tv_total_balance"
            android:layout_gravity="center"
            />



    </LinearLayout>











</com.google.android.material.card.MaterialCardView>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter amount to transfer"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_margin="@dimen/_15sdp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="amount"
                android:inputType="number"
                android:id="@+id/et_amountnum" />
        </com.google.android.material.textfield.TextInputLayout>

<com.google.android.material.button.MaterialButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/bt_sendmoney"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_30sdp"
    android:text="Send Money"


    />




    </LinearLayout>
</layout>